        <Button x:Name="Add" Content="Добавить" HorizontalAlignment="Left" Margin="10,455,0,0" VerticalAlignment="Top" Width="229" Height="33" Background="#FF262626" BorderBrush="White" Foreground="White" Click="Add_Click"/>

