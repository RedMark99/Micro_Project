        <TextBox x:Name="TBLogin" HorizontalAlignment="Left" Height="27" Margin="10,106,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="229" FontFamily="Century Gothic" FontSize="14" Background="#FF262626" BorderBrush="White" Foreground="White"/>
